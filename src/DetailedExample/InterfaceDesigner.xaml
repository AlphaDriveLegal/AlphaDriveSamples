<UserControl x:Class="DetailedExample.InterfaceDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DetailedExample"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Menu x:Name="SourceContainer">
            <MenuItem x:Name="mnuMainGroup" Header="Detailed Example" SubmenuOpened="mnuMainGroup_SubmenuOpened">
                <MenuItem  x:Name="mnuShowFolders" Header="Show Matter Note Folders" IsCheckable="True" Click="mnuShowFolders_Click"></MenuItem>
                <Separator />
                <MenuItem x:Name="mnuLaunchDialog" Header="Launch Dialog" Click="mnuLaunchDialog_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
